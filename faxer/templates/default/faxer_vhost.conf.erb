<VirtualHost *:80>
  ServerAdmin support@crawford.works
  ServerName <%= node['faxer']['hostname'] %>
  ServerAlias www.<%= node['faxer']['hostname'] %>
  ServerAlias *
  DocumentRoot /var/www/html/faxer

  LogLevel Warn
  ErrorLog /var/www/html/faxer/apache_logs/error.log
  CustomLog Combined /var/www/html/faxer/apache_logs/custom.log


  <Directory /faxer>
        Options Indexes FollowSymLinks
        AllowOverride None
        Require all granted
  </Directory>
</VirtualHost>