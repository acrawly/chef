<VirtualHost *:80>
  ServerAdmin support@crawford.works
  ServerName <%= node['faxer']['hostname'] %>
  ServerAlias www.<%= node['faxer']['hostname'] %>
  DocumentRoot /faxer

  LogLevel Warn
  ErrorLog /faxer/apache_logs/error.log
  CustomLog Combined /faxer/apache_logs/custom.log


  <Directory /faxer>
    Options +FollowSymLinks +Indexes
    AllowOverride none 
  </Directory>
</VirtualHost>